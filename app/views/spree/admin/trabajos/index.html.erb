<h1>Listando Trabajos</h1>

<table class="table table-striped order-summary">
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trabajos.each do |trabajo| %>
      <tr>
        <td><%= trabajo.nombre %></td>
        <td><%= link_to 'Mostrar', admin_trabajo_path(trabajo) %></td>
        <td><%= link_to 'Editar', edit_admin_trabajo_path(trabajo) %></td>
        <td><%= link_to 'Eliminar', admin_trabajo_path(trabajo), method: :delete, data: { confirm: 'Â¿Estas seguro que deseas eliminar?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

