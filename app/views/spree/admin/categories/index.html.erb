<h1>Listando Categorias</h1>

<table class="table table-striped order-summary">
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @category.each do |category| %>
      <tr>
        <td><%= category.nombre %></td>
        <td><%= link_to 'Mostrar', admin_category_path(category) %></td>
        <td><%= link_to 'Editar', edit_admin_category_path(category) %></td>
        <td><%= link_to 'Eliminar', admin_category_path(category), method: :delete, data: { confirm: 'Â¿Estas seguro que deseas Eliminar?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

