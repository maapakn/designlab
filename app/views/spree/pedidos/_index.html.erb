<% @pedido.each do |p| %>
<table class="table table-striped order-summary">
  <thead>
    <tr>
      <th>Id</th>
      <th>Fecha de Realización</th>
      <th>Nombre del Paciente</th>
      <th>Trabajo</th>
      <th>Material</th>
      <th>Observación</th>
      <th>Estado</th>
      <th>Diente</th>
    </tr>
  </thead>

  <tbody>
      <tr>
        <td><%= p.id %></td>
        <td><%= p.created_at.strftime("%d/%m/%Y - %T") %></td>
        <td><%= p.nombres %>&nbsp;<%= p.apellidos %></td>
        <td><%= p.trabajo.nombre %></td>
        <td><%= p.material.nombre %></td>
        <td><%= p.observacion %></td>
        <td><%= p.state %></td>
        <% p.dientes.each do |diente| %>
            <td><%= diente.numero %></td>
          <% end %>
        <td align="right"><%= link_to image_tag("4.png", size: "25"), pedido_path(p), :title => "Ver" %></td>
      </tr>
  </tbody>
</table>
<% end %>
<%= paginate @pedido %>
<br>

